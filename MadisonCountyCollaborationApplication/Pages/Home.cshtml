@if (Model.ProcessList.Any())
{
    <form asp-page-handler="Select" method="post" id="processForm">
        <div class="container">
            <div class="row">
                @foreach (var process in Model.ProcessList)
                {
                    <div class="col-md-4">
                        <div class="card" tabindex="0" role="button" onclick="selectProcess(@process.ProcessID)">
                            <div class="card-body">
                                @process.ProcessName
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <input type="hidden" name="ProcessID" id="processIdInput" value="" />
    </form>
}

else
{
    <p>No processes found. Please create a new process.</p>
}

@section Scripts {
    <script>
        function selectProcess(processId) {
            document.getElementById('processIdInput').value = processId;
            document.getElementById('processForm').submit();
        }
    </script>
}
