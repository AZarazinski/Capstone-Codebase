@page
@model MadisonCountyCollaborationApplication.Pages.HomeModel

@{
    ViewData["Title"] = "My Processes";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    .header {
        float: right;
        padding: 5%;
    }

    .box-table {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adds space between cards */
        justify-content: center; /* Centers cards in the container */
    }

    .card {
        flex: 1 1 calc(20% - 20px); /* Makes cards more flexible */
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Adds shadow for depth */
        transition: transform 0.2s; /* Smooth transition for scaling */
        padding: 15px;
        border-radius: 5px; /* Rounds corners of the cards */
    }

    .card:hover {
        transform: scale(1.05); /* Scales card on hover */
        cursor: pointer;
    }

    .card-header, .card-body {
        padding: 15px;
    }


</style>

<h2>My Processes</h2>

@if (Model.ProcessList.Any())
{
    <form asp-page-handler="Select" method="post" id="processForm">
        <div class="box-table">
            @foreach (var process in Model.ProcessList)
            {
                <div class="card" tabindex="0" role="button" onclick="selectProcess(@process.ProcessID)">
                    <div class="card-header">
                        @process.ProcessName
                    </div>
                    <div class="card-body">
                        @process.NotesAndInfo
                    </div>
                </div>
            }
        </div>
        <input type="hidden" name="ProcessID" id="processIdInput" value="" />
    </form>
}
else
{
    <p>No processes found. Please create a new process.</p>
}

@section Scripts {
    <script>
        function selectProcess(processId) {
            document.getElementById('processIdInput').value = processId;
            document.getElementById('processForm').submit();
        }
    </script>
}
