@page
@model MadisonCountyCollaborationApplication.Pages.AdminDashboardModel
@{
}


<h1>Admin Dashboard</h1>


<section id="AddProcess">
    <h1>Add Process</h1>
    <form method="post" asp-page-handler="AddProcess">
    
        <div class="form-floating mb-3">
            <input type="text" asp-for="ProcessName" class="form-control" id="floatingInput" placeholder="Process Name" >
            <label for="floatingInput">Process Name</label>
        </div>
    
        <input type="submit" value="Add Process" class="btn btn-primary" />
    
    </form>
</section>

<section id="AddUserToProcess">
    <h1>Add User to Process</h1>

    <form method="post" asp-page-handler="AddUserToProcess">

        <select asp-for="NewUserProcess.UserID" asp-items="Model.UserList" class="form-select">
            <option value="">Select a User</option>
        </select>

        <select asp-for="NewUserProcess.ProcessID" asp-items="Model.ProcessList" class="form-select">
            <option value="">Select a Process</option>
        </select>

        <input type="submit" value="Add User to Process" class="btn btn-primary" />

    </form>
</section>

    @* //CREATE USER SECTION// *@

<section id="AddUser">
    <h2>Create New User</h2>
    <form method="post" asp-page-handler="AddUser">
        <div class="form-group">
            <label for="userName">Username</label>
            <input type="text" asp-for="NewUser.userName" class="form-control" id="userName" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="userPassword">Password</label>
            <input type="password" asp-for="NewUser.userPassword" class="form-control" id="userPassword" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" asp-for="NewUser.firstName" class="form-control" id="firstName" placeholder="Enter first name">
        </div>
        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" asp-for="NewUser.lastName" class="form-control" id="lastName" placeholder="Enter last name">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" asp-for="NewUser.email" class="form-control" id="email" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" asp-for="NewUser.phone" class="form-control" id="phone" placeholder="Enter phone number">
        </div>
        <div class="form-group">
            <label for="userType">User Type</label>
            <select asp-for="NewUser.userType" class="form-control" id="userType">
                <option value="Admin">Admin</option>
                <option value="User">User</option>
                <!-- Add more user types as needed -->
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Create User</button>
    </form>
</section>


