@page
@model MadisonCountyCollaborationApplication.Pages.Dataset.ChartDisplayModel
@{
}

<div class="text-center">
    <h1 class="display-4">Chart Display</h1>
    <div id="chart"></div>
</div>

<h2>Plotly Example</h2>

<div id="plotDiv" style="width:100%;height:500px;"></div>

@section Scripts {
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <script>
        var data = [{
            x: [1, 2, 3, 4, 5],
            y: [10, 20, 30, 40, 50],
            mode: 'lines+markers',
            type: 'scatter'
        }];

        var layout = {
            title: 'Sample Plot',
            xaxis: {
                title: 'X Axis',
            },
            yaxis: {
                title: 'Y Axis',
            }
        };

        Plotly.newPlot('plotDiv', data, layout);
    </script>
}


